extend ../layouts/common

block content
  h1 Create product

  if errors
    each error in errors
      .alert.alert-danger=error

  form(action="/products/create", method="POST")
    .form-group
      lable(for="name") Name
      input#name.form-control(type="text" name="name", value=values ? values.name : '')
    
    .form-group
      lable(for="image") Image
      input#image.form-control(type="text" name="image", value=values ? values.image : '')

    .form-group
      lable(for="description") Description
      input#description.form-control(type="text" name="description", value=values ? values.description : '')
    
    .form-group
      lable(for="quality") Quality
      input#quality.form-control(type="text" name="quality", value=values ? values.quality : '')

    button.btn.btn-primary Create